<h1>New Company</h1>

<%= form_with model: @company_registration_form, url: companies_path, local: true do |form| %>
  <h2>Company</h2>
  name: <%= form.text_field :name %>

  <h2>User</h2>
  <%= form.fields_for :users do |user_fields| %>
    name: <%= user_fields.text_field :name %><br>
    age: <%= user_fields.text_field :age %><br>
  <% end %>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', companies_path %>
