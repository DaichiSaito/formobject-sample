<h1>New User</h1>

<%= form_with model: @user_registration_form, url: users_path, local: true do |f| %>
  <% if f.object.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>User</h2>
  <div>name: <%= f.text_field :name %></div>

  <h2>Company</h2>
  <div>name: <%= f.text_field :company_name %></div>
  <%= f.submit %>
<% end %>


<%= link_to 'Back', users_path %>
